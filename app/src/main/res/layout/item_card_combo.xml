<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Навальный"
            android:id="@+id/title"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НОВОСТИ"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_shape"
                android:textColor="#ffffff"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#202020"
                android:id="@+id/news_1"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="7dp"
                android:text="Тест типо мешает воспринитию дизайна, но я в этот миф не верю, сорики за такой галимый дизайн всем перфекционистам"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d7d7d7" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НОВОСТИ"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_shape"
                android:textColor="#ffffff"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/news_2"
                android:textColor="#202020"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="7dp"
                android:text="Тест типо мешает воспринитию дизайна, но я в этот миф не верю, сорики за такой галимый дизайн всем перфекционистам"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d7d7d7" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НОВОСТИ"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/textview_shape"
                android:textColor="#ffffff"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_3"
                android:layout_marginTop="5dp"
                android:textColor="#202020"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Тест типо мешает воспринитию дизайна, но я в этот миф не верю, сорики за такой галимый дизайн всем перфекционистам"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>